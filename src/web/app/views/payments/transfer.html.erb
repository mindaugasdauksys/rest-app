<h1>Editing payment</h1>

<%= form_for :payment, url: carry_payments_path, method: :patch do |f| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@payment.errors.count, "error") %> prohibited
        this account from being saved:
      </h2>
      <ul>
        <% @payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :From %><br>
    <%= f.select :from, options_for_select(@accounts) %><br>
  </p>

  <p>
    <%= f.label :To %><br>
    <%= f.select :to, options_for_select(@others) %><br>
  </p>

  <p>
    <%= f.label :Amount %> <br>
    <%= f.text_field :amount %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "Go back", { action: "index" } %>
