<h1>Convert currency</h1>

<p>Name: <%= @account.name %></p>
<p>Surname: <%= @account.surname %></p>
<p>Amount: <%= @account.amount %></p>
<p>Currency: <%= @account.currency %></p>
<p>---------------------------------</p>
<p>From: USD to: EUR ratio: <%= @from_usd %></p>
<p>From: EUR to: USD ratio: <%= @from_eur %></p>
<p>---------------------------------</p>
<%= form_for :account, url: convert_account_path(@account), method: :patch do |f| %>
  <p>
    <%= f.label :Currency %>
    <%= f.select :currency, options_for_select(['USD', 'EUR']) %><br>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "Go back", { action: "index" } %>
